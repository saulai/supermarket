<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="80dp"
        android:background="@color/white"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_big"
        android:paddingEnd="@dimen/margin_big"
        android:text="@string/app_name"
        android:textAlignment="inherit"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_bigger"
        android:drawableEnd="@drawable/ic_supermarket"
        android:drawableTint="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/titleDivider"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <TextView
        android:id="@+id/logoutTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:background="@color/white"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_big"
        android:paddingEnd="@dimen/margin_big"
        android:text="@string/menu_close_session"
        android:textAlignment="inherit"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_medium"
        android:drawableEnd="@drawable/ic_close"
        android:drawableTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleDivider" />

    <View
        android:id="@+id/logoutDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/logoutTV"/>

</androidx.constraintlayout.widget.ConstraintLayout>

