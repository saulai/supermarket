<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonDialog">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SupermarketButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
    </style>

    <style name="ProductParentTextView">
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_margin">@dimen/margin_big</item>
    </style>

    <style name="HeaderTextView" parent="ProductParentTextView">
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="SubHeaderTextView" parent="ProductParentTextView">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="LoginInput">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/margin_default</item>
    </style>

</resources>
